extends ./layout.jade

block post-meta
    include meta-detalle.jade

block post-style
    link(rel="stylesheet", href="/css/pelis-detalle.min.css")
    link(rel="stylesheet", href="/css/carousel.min.css")

block post-script
    script(src="/js/carousel.min.js")
    script(type='text/javascript').
        //- code js


block contenido

    div(id="caja-principal")

        section(class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12")
            
            div(class="caja-peli")
                h1(class="titulo-peli") #{ pelicula.titulo + " (" + pelicula.age + ")" }

            div(class="row")

                div(class="col-xl-5 col-lg-6 caja-portada-peli")
                    //- img(class="portada-peli", src="/imagenes/films/#{ pelicula.foto }", alt="#{pelicula.titulo}")
                    img(class="portada-peli",src="http://lorempixel.com/g/400/600", alt="#{pelicula.titulo}")

                div(class="col-xl-7 col-lg-6 caja-datos")
                    div
                        p(class="p-justify") #{ pelicula.descripcion}
                        
                        p 
                            strong Audio: 
                            &nbsp; #{pelicula.audio}
                        
                        p
                            strong Calidad: 
                            &nbsp; #{pelicula.calidad + " / 5"}
                        
                        p 
                            strong Puntuaci√≥n: 
                            &nbsp; #{pelicula.puntuacion}
                        
                        p 
                            strong Director: 
                            &nbsp;#{pelicula.director}
                        
                        p(class="p-justify")  
                            strong Elenco: 
                            &nbsp; #{pelicula.elenco}

        include enlaces.jade

        hr

        div(class="fb-like", data-href="http://filmsplay.herokuapp.com/films/#{pelicula.titulo}", data-layout="standard", data-action="like", data-size="small", data-show-faces="true", data-share="true")

        hr

        include slider-recomends.jade

        hr 

        div(class="fb-comments", data-href="http://filmsplay.herokuapp.com/films/#{pelicula.titulo}", data-width="100%", data-numposts="100")